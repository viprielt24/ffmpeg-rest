{
  "name": "ffmpeg-rest",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "npm run build:server && npm run build:worker",
    "build:server": "esbuild src/server.ts --bundle --sourcemap --platform=node --format=esm --packages=external --loader:.node=file --outfile=dist/server.js",
    "build:worker": "esbuild src/worker.ts --bundle --sourcemap --platform=node --format=esm --packages=external --loader:.node=file --outfile=dist/worker.js",
    "start": "concurrently --names \"SERVER,WORKER\" --prefix-colors \"blue,green\" \"node ./dist/server.js\" \"node ./dist/worker.js\"",
    "start:server": "node ./dist/server.js",
    "start:worker": "node ./dist/worker.js",
    "test": "vitest --exclude '**/integration.test.ts'",
    "test:integration": "vitest --run integration.test.ts",
    "test:all": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@hono/node-server": "^1.19.5",
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.20",
    "@scalar/openapi-to-markdown": "^0.2.43",
    "archiver": "^7.0.1",
    "bullmq": "^5.60.0",
    "concurrently": "^9.2.1",
    "hono": "^4.9.9",
    "ioredis": "^5.8.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "tar": "^7.5.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@testcontainers/localstack": "^11.7.1",
    "@testcontainers/redis": "^11.7.1",
    "@types/archiver": "^6.0.3",
    "@types/node": "^20.11.17",
    "@types/tar": "^6.1.13",
    "dotenv": "^17.2.3",
    "esbuild": "0.25.10",
    "eslint": "^9.37.0",
    "prettier": "3.6.2",
    "testcontainers": "^11.7.1",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  }
}

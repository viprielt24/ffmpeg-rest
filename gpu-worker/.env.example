# Redis (same as ffmpeg-backend on Railway)
REDIS_URL=redis://default:xxx@xxx.railway.app:6379

# Cloudflare R2 (same as ffmpeg-backend)
R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
R2_ACCESS_KEY=xxx
R2_SECRET_KEY=xxx
R2_BUCKET=ffmpeg-rest
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# Webhook (ffmpeg-backend API URL)
API_WEBHOOK_URL=https://your-api.railway.app/webhooks/generate/complete
WEBHOOK_SECRET=your-webhook-secret

# Model paths (set based on worker type)
WAV2LIP_MODEL_PATH=/workspace/models/wav2lip
ZIMAGE_MODEL_PATH=Tongyi-MAI/Z-Image-Turbo

# Worker settings
MAX_IDLE_SECONDS=300
